<mvc:View
  controllerName="myApp.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <App>
    <pages>
      <Page title="Gestion de tareas">
        <content>
			<VBox>
				<List 
					id="taskList"
					items="{/tasks}">

					<StandardListItem 
						title="{taskName}"
						description="{taskDescription}"/>
				</List>
			</VBox>
          <Button text="Add task" press="onPressAddTask"/>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
